<Window x:Class="TravelAgencyGUI.ClientbWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgencyGUI"
        mc:Ignorable="d"
        Title="Client" Height="300" Width="320">
    <Grid Margin="10,0,10,0">
        <Grid.Background>
            <ImageBrush ImageSource="mountain.jpg" Stretch="Fill"/>
        </Grid.Background>
        <TextBox x:Name="tbFirstname" HorizontalAlignment="Left" Height="34" Margin="118,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="152" FontSize="16"/>
        <TextBox x:Name="tbSurname" HorizontalAlignment="Left" Height="34" Margin="118,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="152" FontSize="16"/>
        <ComboBox x:Name="cbStatus" HorizontalAlignment="Left" Height="30" Margin="118,162,0,0" VerticalAlignment="Top" Width="152" FontSize="16"/>
        <Label x:Name="lbFirstName" Content="First name:" HorizontalAlignment="Left" Height="34" Margin="0,52,0,0" VerticalAlignment="Top" Width="92" FontSize="16"/>
        <Label x:Name="tbSurname1" Content="Surname:" HorizontalAlignment="Left" Height="34" Margin="10,103,0,0" VerticalAlignment="Top" Width="92" FontSize="16"/>
        <Label x:Name="lbStatus" Content="Status:" HorizontalAlignment="Left" Height="34" Margin="10,160,0,0" VerticalAlignment="Top" Width="92" FontSize="16"/>
        <Button x:Name="btConfirm" Content="Confirm" HorizontalAlignment="Left" Height="22" Margin="118,220,0,0" VerticalAlignment="Top" Width="64" Click="btConfirm_Click"/>
        <Label x:Name="lbEnterClient" Content="Enter client data" HorizontalAlignment="Left" Height="32" Margin="84,10,0,0" VerticalAlignment="Top" Width="182" FontSize="18"/>
        <Button x:Name="btCancel" Content="Cancel" HorizontalAlignment="Left" Height="22" Margin="208,220,0,0" VerticalAlignment="Top" Width="62" Click="btCancel_Click"/>

    </Grid>
</Window>
