<Window x:Class="TravelAgencyGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgencyGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="OfferLabel" Content="Offer:" HorizontalAlignment="Left" Height="25" Margin="10,42,0,0" VerticalAlignment="Top" Width="64"/>
        <Button x:Name="btBrowse" Content="Browse" HorizontalAlignment="Left" Height="18" Margin="121,46,0,0" VerticalAlignment="Top" Width="51" IsDefault="True" Click="btBrowse_Click"/>
        <TextBlock x:Name="tbofferdest" HorizontalAlignment="Left" Height="20" Margin="121,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="143"/>
        <Label x:Name="destinationLabel" Content="Destination:" HorizontalAlignment="Left" Height="23" Margin="10,67,0,0" VerticalAlignment="Top" Width="94"/>
        <Label x:Name="departureLabel" Content="Departure:" HorizontalAlignment="Left" Height="26" Margin="10,90,0,0" VerticalAlignment="Top" Width="94"/>
        <TextBlock x:Name="tbDeparture" HorizontalAlignment="Left" Height="20" Margin="121,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="143"/>
        <TextBlock x:Name="tbHotel" HorizontalAlignment="Left" Height="20" Margin="121,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="143"/>
        <TextBlock x:Name="tbDuration" HorizontalAlignment="Left" Height="20" Margin="121,141,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="143"/>
        <TextBlock x:Name="tbPrice" HorizontalAlignment="Left" Height="20" Margin="121,164,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="143"/>
        <TextBlock x:Name="tbDepDate" HorizontalAlignment="Left" Height="20" Margin="121,187,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="143"/>
        <TextBlock x:Name="tbRetDate" HorizontalAlignment="Left" Height="20" Margin="121,213,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="143"/>
        <Label x:Name="HotelLabel" Content="Hotel:" HorizontalAlignment="Left" Height="23" Margin="10,113,0,0" VerticalAlignment="Top" Width="94"/>
        <Label x:Name="RetDateLabel" Content="Return date:" HorizontalAlignment="Left" Height="26" Margin="10,208,0,0" VerticalAlignment="Top" Width="94"/>
        <Label x:Name="DurationLabel" Content="Duration: " HorizontalAlignment="Left" Height="23" Margin="10,136,0,0" VerticalAlignment="Top" Width="94"/>
        <Label x:Name="PriceLabel" Content="Price per person:" HorizontalAlignment="Left" Height="26" Margin="10,159,0,0" VerticalAlignment="Top" Width="94"/>
        <Label x:Name="depDateLabel" Content="Departure date:" HorizontalAlignment="Left" Height="26" Margin="10,182,0,0" VerticalAlignment="Top" Width="94"/>


    </Grid>
</Window>


